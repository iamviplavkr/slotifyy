<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_medium"
    app:cardBackgroundColor="@color/background_card"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_medium">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/margin_small">

            <TextView
                android:id="@+id/slotNameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Parking Name"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_large"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/slotRatingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â˜… 4.5"
                android:textColor="@color/accent_yellow"
                android:textSize="@dimen/text_medium" />

        </LinearLayout>


        <TextView
            android:id="@+id/slotAddressText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_small"
            android:layout_marginBottom="@dimen/margin_medium" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/slotDistanceText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0.5 km"
                android:textColor="@color/text_muted"
                android:textSize="@dimen/text_small" />

            <TextView
                android:id="@+id/slotPriceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price_format"
                android:textColor="@color/accent_yellow"
                android:textSize="@dimen/text_medium"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/margin_medium" />


        </LinearLayout>


        <TextView
            android:id="@+id/slotAvailabilityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 slots available"
            android:textColor="@color/success_green"
            android:textSize="@dimen/text_small"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/card_background"
            android:padding="6dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>