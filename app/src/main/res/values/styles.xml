<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ================================================= -->
    <!-- TEXT APPEARANCE -->
    <!-- ================================================= -->

    <!-- Base text style -->
    <style name="TextAppearance.Slotify" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Slotify.Display" parent="TextAppearance.Slotify">
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Slotify.Headline1" parent="TextAppearance.Slotify">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Slotify.Headline2" parent="TextAppearance.Slotify">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Slotify.Title" parent="TextAppearance.Slotify">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Slotify.Body" parent="TextAppearance.Slotify">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Slotify.Caption" parent="TextAppearance.Slotify">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_hint</item>
    </style>

    <!-- ================================================= -->
    <!-- BUTTONS -->
    <!-- ================================================= -->

    <style name="Widget.Slotify.Button" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">14dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Widget.Slotify.Button.Primary" parent="Widget.Slotify.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.Slotify.Button.Secondary" parent="Widget.Slotify.Button">
        <item name="backgroundTint">@color/surface</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- ================================================= -->
    <!-- CARD -->
    <!-- ================================================= -->

    <style name="Widget.Slotify.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
    </style>
    <!-- ================================================= -->
    <!-- INPUT -->
    <!-- ================================================= -->

    <style name="Widget.Slotify.TextInput" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- ================================================= -->
    <!-- CHIP -->
    <!-- ================================================= -->

    <style name="Widget.Slotify.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@drawable/chip_background_color</item>
        <item name="chipStrokeColor">@color/primary</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="chipCornerRadius">8dp</item>
    </style>

    <!-- ================================================= -->
    <!-- BOTTOM NAVIGATION -->
    <!-- ================================================= -->

    <style name="Widget.Slotify.BottomNavigationView"
        parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/surface</item>
        <item name="itemIconTint">@drawable/nav_item_color</item>
        <item name="itemTextColor">@drawable/nav_item_color</item>
        <item name="itemActiveIndicatorStyle">@null</item>
    </style>

    <!-- ================================================= -->
    <!-- TOOLBAR -->
    <!-- ================================================= -->

    <style name="Widget.Slotify.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/background</item>
        <item name="titleTextColor">@color/text_primary</item>
        <item name="subtitleTextColor">@color/text_secondary</item>
    </style>

    <!-- ================================================= -->
    <!-- DIALOG -->
    <!-- ================================================= -->

    <style name="Widget.Slotify.Dialog"
        parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorSurface">@color/surface</item>
    </style>

</resources>
